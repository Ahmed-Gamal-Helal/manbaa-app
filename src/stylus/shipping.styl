.shipping
    display: flex
    flex-wrap: wrap
    align-items: flex-start
    .part-1
        flex: 1
        background-color: $red
        text-align: center

        .refresh a i 
            background-color: $white
            color: $red
            border: 1px solid $red
            border-radius: 50%
            padding: 25px
            font-size: 35px
            margin: 30px 0 10px 0
            border: 2px solid $red
            box-shadow: 0px 1px 0px 0px $black
        h3
            font-weight: bold
            font-size: 16px
        h3, p
            color: $white 
        p
            padding-bottom: 18px
 
    .part-2
        flex: 1
        background-color: $black
        text-align: center
        .ship a i 
            background-color: $red
            color: $white
            border: 1px solid $red
            border-radius: 50%
            padding: 25px
            font-size: 35px
            margin: 30px 0 10px 0
            border: 2px solid $red
            box-shadow: 0px 1px 0px 0px black
        h3
            font-weight: bold
            color: $red !important
            font-size: 16px
        h3, p
            color: $white
        p
            padding-bottom: 18px 
    .part-3
        flex: 1
        background-color: $red
        text-align: center
        .chat 
            a i 
                background-color: $white
                color: $red
                border: 1px solid $red
                border-radius: 50%
                font-size: 35px
                padding: 25px
                margin: 30px 0 10px 0
                border: 2px solid $red
                box-shadow: 0px 1px 0px 0px $black
        h3
            font-weight: bold
            font-size: 16px
        h3, p
            color: $white
        p
            padding-bottom: 18px