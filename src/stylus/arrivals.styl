.chairs
    display: flex
    flex-wrap: wrap
    margin-top: 20px
    position: relative
    margin-bottom: 110px
    .piece1
        flex: 1
        justify-content: space-between
        position: absolute
        left: 2%
        h2
            font-weight: bold
            font-size: 23px
            color: black
            line-height: 25px
            margin-bottom: 0
            margin-top: 5px
    .piece2
        flex: 1
        margin-top: 10px
        position: absolute
        right: 0
        ul
            list-style: none
            display: flex
            justify-content: flex-end
            margin-right 50px
            margin-top: 10px
            li a i 
                height: 32px
                width: 32px
                padding: 3px 0 3px 11px
                color: $white
                font-size: 23px
                background-color: $black
                margin: 3px
                border-radius: 50%
            li a .fa-angle-right
                background-color: $red

