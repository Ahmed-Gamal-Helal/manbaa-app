.container-3
    background-color: $white
    .col-md-12  
        list-style: none
        margin-bottom 0
        #item-display
            padding-top: 100px
            padding-bottom 100px
        .store
            padding-bottom 50px
            padding-left: 80px
            .product-title
                font-size: 45px
                font-weight: bold
                padding-top: 160px
                letter-spacing: -2px
            .product-stock 
                font-size: 16px
                padding-top: 8px 
                margin-bottom: 60px 

            a 
                background-color: $red
                font-size: 14px
                font-weight: bold
                text-decoration: none
                cursor: pointer
                color: $white
                border: 1px solid $red
                padding: 12px 20px
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
